<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/homelogo">



        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/driving_alone_hurts_your_wallet_and_health"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            />


        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/log_button"

            android:layout_marginTop="40dp"
           android:layout_gravity="center"
            android:text="@string/mainactivitylogin"
            android:background="@drawable/color_border"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/reg_button"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"

            android:text="@string/mainactivityregister"
            android:background="@drawable/color_border"/>




    </LinearLayout>


</RelativeLayout>